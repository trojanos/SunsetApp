<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/you_city_is"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:text="You city is :" />


    <TextView
        android:id="@+id/show_local_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="9dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/show_local_sunrise"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="9dp"
        android:textSize="18sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/show_local_sunset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="9dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/get_localcity_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="200dp"
        android:paddingLeft="8dp"
        android:paddingRight="9dp"
        android:text="@string/location_home" />

</RelativeLayout>